<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swpuiot.mydrawerlayout2.view.view.ReadDiaryActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="?attr/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_revisediaryactivity"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="4"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@android:style/ThemeOverlay.Material.Dark"
                app:title="我的日记" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorPrimaryDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_gotolastday"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="前一天"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_thisday"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_gotonextday"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="后一天"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/text_readdiarytitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:hint="这一天什么都没留下"
        android:padding="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_readdiarydate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_readdiaryweekday"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_readdiayweather"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_readdiarycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="start"
        android:padding="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

</LinearLayout>
